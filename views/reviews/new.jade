extends ../layout

block content

  div.rev
    h1.hrev New Review
  div.container
    form(action='/restaurants/'+restaurant.id+'/reviews' method='POST')
      fieldset.frev
        legend New Review
        div.form-group
          label(for='reviewer_name') Name
          br
          input.form-control(type='text' id='reviewer_name' name='reviewer_name' placeholder='Name')
        div.form-group
          label(for='date') Date
          br
          input.form-control(type='text' id='date' name='date' placeholder='mm/dd/yyyy')
        div.form-group
          label Rating
          input(type='radio' name='rating' value='1' checked)
          input(type='radio' name='rating' value='2')
          input(type='radio' name='rating' value='3')
          input(type='radio' name='rating' value='4')
          input(type='radio' name='rating' value='5')
        div.form-group
          label(for='review') Review
          br
          textarea.form-control(rows='5' id='review' placeholder='Your experience...' name='review')
        div.buttons
          button.btn.btn-primary#sub(type='submit') Submit
          a.btn.btn-primary(href='/restaurants/'+restaurant.id) Cancel
