extends ../layout

block content

  div.rev
    h1.hrevEdit Edit Review
  div.container
    if reviews
      form(action='/restaurants/#{restaurant.id}/reviews/#{reviews.id}/edited' method='post')
        fieldset.frevEdit
          legend Edit Review
          div.form-group
            label(for='reviews_name') Name
            br
            input.form-control(type='text' id='reviews_name' name='reviews_name' value=reviews.reviewer_name placeholder='Name')
          div.form-group
            label(for="date") Date
            br
            input.form-control(type='text' id='date' name='date' value=reviews.date placeholder='mm/dd/yyyy')
          div.form-group
            label Rating
            input(type='radio' name='rating' value='1' checked=(reviews ? (reviews.rating === 1 ? true : undefined): undefined))
            input(type='radio' name='rating' value='2' checked=(reviews ? (reviews.rating === 2 ? true : undefined): undefined))
            input(type='radio' name='rating' value='3' checked=(reviews ? (reviews.rating === 3 ? true : undefined): undefined))
            input(type='radio' name='rating' value='4' checked=(reviews ? (reviews.rating === 4 ? true : undefined): undefined))
            input(type='radio' name='rating' value='5' checked=(reviews ? (reviews.rating === 5 ? true : undefined): undefined))
          div.form-group
            label(for='review') Review
            br
            textarea.form-control(rows='5' id='review' name='review') #{reviews.review}
          div.buttons
            button.btn.btn-primary#sub(type='submit') Submit
            a.btn.btn-primary(href='/restaurants/'+restaurant.id) Cancel
