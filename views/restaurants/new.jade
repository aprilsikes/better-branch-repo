          label(for='image') Image
          input.form-control(type='text' id='image' placeholder='Image URL' name='image')
        div.form-group
          label(for='bio')
          textarea.form-control(rows='5' id='bio' placeholder='Short Bio' name='bio')
        div.buttons
          button.btn.btn-primary#sub(type='submit') Submit
          a.btn.btn-primary(href='/') Cancel
