extends ../layout

block content

  div.new
    h1.hnew New Restaurant
  div.container
    form(action='/:id' method='post')
      fieldset.fnew
        legend Create Restaurant
        div.form-group
          label(for='name') Name
          br
          input.form-control(type='text' id='name' placeholder='Restaurant Name' name='name')
        div.form-group
          label(for='street1') Street1
          br
          input.form-control(type='text' id='street1' placeholder='Street1' name='street1')
        div.form-group
          label(for='street2') Street2
          br
          input.form-control(type='text' id='street2' placeholder='Street2' name='street2')
        div.form-group
          label(for='city') City
          br
          input.form-control(type='text' id='city' placeholder='City' name='city')
        div.form-group
          select(type='text' id='state' name='state')
            option(value='AL' selected='selected') Alabama
            option(value='AK') Alaska
